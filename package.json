{
  "name": "conduit-node",
  "version": "1.0.0",
  "description": "conduit on node",
  "main": "src/app.js",
  "scripts": {
    "compile": "typescript-scripts compile --allowJs",
    "lint": "typescript-scripts lint './src/**/*.ts'",
    "mongo:start": "docker run --name realworld-mongo -d -p 27017:27017 mongo & sleep 5",
    "start": "node ./app.js",
    "dev": "NODE_ENV=development nodemon --exec 'typescript-scripts run src/application.ts' src/application.ts",
    "test": "npm run compile -- --noEmit && npm run lint && npm run test:unit && npm run test:e2e",
    "test:unit": "typescript-scripts test 'src//**/*.spec.ts'",
    "test:unit:watch": "typescript-scripts test --watch 'src/**/*.spec.ts' --reporter min",
    "test:e2e": "newman run ./tests/api-tests.postman.json -e ./tests/env-api-tests.postman.json",
    "stop": "lsof -ti :3000 | xargs kill",
    "mongo:stop": "docker stop realworld-mongo && docker rm realworld-mongo"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gothinkster/productionready-node-api.git"
  },
  "license": "ISC",
  "dependencies": {
    "@cdimitroulas/typescript-scripts": "^1.1.1",
    "@types/body-parser": "^1.19.0",
    "@types/express": "^4.17.7",
    "@types/express-session": "^1.17.0",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/lodash.isplainobject": "^4.0.6",
    "@types/mongodb": "^3.5.25",
    "@types/morgan": "^1.9.1",
    "@types/passport": "^1.0.4",
    "body-parser": "1.15.0",
    "cors": "2.7.1",
    "ejs": "2.4.1",
    "errorhandler": "1.4.3",
    "express": "4.13.4",
    "express-jwt": "3.3.0",
    "express-session": "1.13.0",
    "fp-ts": "^2.7.1",
    "jsonwebtoken": "7.1.9",
    "lodash.isplainobject": "^4.0.6",
    "method-override": "2.3.5",
    "methods": "1.1.2",
    "mongodb": "^3.5.9",
    "mongoose": "4.4.10",
    "mongoose-unique-validator": "1.0.2",
    "morgan": "1.7.0",
    "passport": "0.3.2",
    "passport-local": "1.0.0",
    "request": "2.69.0",
    "slug": "0.9.1",
    "underscore": "1.8.3",
    "validator": "^13.1.1"
  },
  "devDependencies": {
    "@types/chai": "^4.2.11",
    "@types/validator": "^13.1.0",
    "chai": "^4.2.0",
    "newman": "^3.8.2",
    "nodemon": "^1.11.0"
  }
}
